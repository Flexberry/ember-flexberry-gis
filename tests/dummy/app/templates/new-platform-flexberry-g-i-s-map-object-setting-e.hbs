<h3 class="ui header">{{t 'forms.new-platform-flexberry-g-i-s-map-object-setting-e.caption'}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=model.errors}}
    </div>
  </div>
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button type="submit" class="ui button save-button" {{action 'save'}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button type="submit" class="ui button save-del-button" {{action 'delete'}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button type="submit" class="ui button close-button" {{action 'close'}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=readonly
    required=true
    value=model.typeName
    class=(if model.errors.typeName 'error' '')
    label=(t 'forms.new-platform-flexberry-g-i-s-map-object-setting-e.typeName-caption')
  }}
  {{flexberry-validationmessage error=model.errors.typeName pointing="pointing"}}
</div>

<div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=readonly
    required=true
    value=model.title
    class=(if model.errors.title 'error' '')
    label=(t 'forms.new-platform-flexberry-g-i-s-map-object-setting-e.title-caption')
  }}
  {{flexberry-validationmessage error=model.errors.title pointing="pointing"}}
</div>

<div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=readonly
    required=true
    value=model.listForm
    class=(if model.errors.listForm 'error' '')
    label=(t 'forms.new-platform-flexberry-g-i-s-map-object-setting-e.listForm-caption')
  }}
  {{flexberry-validationmessage error=model.errors.listForm pointing="pointing"}}
</div>

<div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=readonly
    required=true
    value=model.editForm
    class=(if model.errors.editForm 'error' '')
    label=(t 'forms.new-platform-flexberry-g-i-s-map-object-setting-e.editForm-caption')
  }}
  {{flexberry-validationmessage error=model.errors.editForm pointing="pointing"}}
</div>

<div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=readonly
    required=true
    value=model.multEditForm
    class=(if model.errors.multEditForm 'error' '')
    label=(t 'forms.new-platform-flexberry-g-i-s-map-object-setting-e.multEditForm-caption')
  }}
  {{flexberry-validationmessage error=model.errors.multEditForm pointing="pointing"}}
</div>

<div class="field">
  <label>{{t 'forms.new-platform-flexberry-g-i-s-map-object-setting-e.defaultMap-caption'}}</label>
  {{
    flexberry-lookup
    choose='showLookupDialog'
    remove='removeLookupValue'
    value=model.defaultMap
    displayAttributeName='name'
    autocomplete=true
    relationName='defaultMap'
    projection='MapL'
    title=(t 'forms.new-platform-flexberry-g-i-s-map-object-setting-e.defaultMap-caption')
    readonly=readonly
    componentName="defaultMapLookup"
  }}
  {{flexberry-validationmessage error=model.errors.defaultMap pointing="pointing"}}
</div>

</form>
