{{#if showLoader}}
  <div class="ui active  inline loader"></div>{{t "components.layer-result-list.processing"}}
{{else if (not hasData)}}
  {{t "components.layer-result-list.nodata"}}
{{/if}}
{{#if hasError}}
  {{t "components.layer-result-list.error"}}
{{/if}}
{{#each results as |result|}}
 {{#if (await result.features)}}
   {{#flexberry-toggler caption=result.layerModel.name expanded=true}}
     <div class="ui list transition">
      {{#each (await result.features) as |feature|}}
        {{feature-result-item
          feature=feature
          layerModel=result.layerModel
          selectedFeature=selectedFeature
          selectFeature=(action "selectFeature")
          panTo=(action "panTo")
          zoomTo=(action "zoomTo")
        }}
      {{/each}}
     </div>
    {{/flexberry-toggler}}
  {{/if}}
{{/each}}
