<div class="ui centered grid">
  <div class="six wide column">
    <div class="field">
      <label>
        Тип диаграммы
      </label>
    {{flexberry-dropdown
      items=_availableTypes
      value=_selectedModeType
    }}
    </div>
    <div class="field">
      <label>
        Заголовок диаграммы
      </label>
    {{flexberry-textbox
      value=_captionChart
    }}
    </div>

    <div class="ui grid">
      <div class="column">
        {{#if _selectedModeType}}
          {{component (concat "charts/type-charts/" _selectedModeType)
            _layer = _geoJsonLayer
            _captionChart = _captionChart
            _selectedModeType = _selectedModeType
            onInit=(action "initJsonCharts")
          }}
        {{/if}}
      </div>
    </div>

    <div class="ui grid">
      <div class="right aligned column">
        {{flexberry-button
          caption="Сформировать диаграмму"
          click=(action "onClick")
        }}
      </div>
    </div>
  </div>

  <div class="nine wide column">
    <div class="containerCR" style="width:100%; height:500px;">
    </div>
  </div>
</div>
