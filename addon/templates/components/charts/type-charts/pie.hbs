<div class="field">
  <label>
    {{t "components.charts.type-charts.pie.caption"}}
  </label>
  {{#ui-dropdown class="compact selection" onChange=(action "onXAxisPropertyChange") action="hide"}}
    <i class="dropdown icon"></i>
    <div class="text">
      {{get localizedProperties _selectedXAxisProperty}}
    </div>
    <div class="menu">
      {{#each-in _propertiesForXAxis as |key value|}}
        <div class="item" data-value="{{key}}">{{value}}</div>
      {{/each-in}}
    </div>
  {{/ui-dropdown}}
</div>
<div class="field">
  <label>
    {{t "components.charts.type-charts.pie.value"}}
  </label>
  {{#ui-dropdown class="compact selection" onChange=(action "onYAxisPropertyChange") action="hide"}}
    <i class="dropdown icon"></i>
    <div class="text">
      {{get localizedProperties _selectedYAxisProperty}}
    </div>
    <div class="menu">
      {{#each-in _propertiesForYAxis as |key value|}}
        <div class="item" data-value="{{key}}">{{value}}</div>
      {{/each-in}}
    </div>
  {{/ui-dropdown}}
</div>
