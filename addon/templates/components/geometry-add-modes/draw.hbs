{{#if (eq tabModel.typeGeometry "polygon") }}
  {{flexberry-button
    tooltip=(t "components.map-tools.draw.draw-polygon.caption")
    click=(action "onGeometryTypeSelect" "polygon")
    iconClass="flexberry-map-tool-icon star icon"
  }}
  {{flexberry-button
    tooltip=(t "components.map-tools.draw.draw-rectangle.caption")
    click=(action "onGeometryTypeSelect" "rectangle")
    iconClass="flexberry-map-tool-icon square icon"
  }}
  {{flexberry-button
    tooltip=(t "components.map-tools.draw.draw-circle.caption")
    click=(action "onGeometryTypeSelect" "circle")
    iconClass="flexberry-map-tool-icon circle icon"
  }}
  {{flexberry-button
    tooltip=(t "components.map-tools.draw.draw-part.caption")
    click=(action "onGeometryTypeSelect" "partPolygon")
    iconClass="flexberry-map-tool-icon part icon"
    readonly=(eq tabModel._selectedShape false)
  }}
