<div class="two wide column">  
  <i class="dropdown icon"></i>
    <div class="default text">
      {{t "gradients.dropdown-gradient.default-text"}}
    </div>
    <div class="menu">
      {{#each gradientList as |gradient|}}
        <div class="item" data-value="{{gradient.name}}">
          <canvas class = "flag {{gradient.name}}"></canvas>
        </div>
      {{/each}}
      {{#if _customGradient}}
        <div class="item" data-value="{{_customGradient.name}}">
          <canvas class = "flag {{_customGradient.name}}"></canvas>
        </div>
      {{/if}}
    </div>
  </div>
