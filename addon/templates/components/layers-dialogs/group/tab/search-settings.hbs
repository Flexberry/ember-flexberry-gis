<div class="ui grid">
  <div class="row">
    <div class="column">
      {{flexberry-checkbox
        value=value.canBeSearched
        label=('t' _canBeSearchedCheckBoxLabel)
        readonly=readonly
        class=checkboxClass
      }}
    </div>
  </div>
  <div class="row">
    <div class="column">
      {{flexberry-checkbox
        value=value.canBeContextSearched
        label=('t' _canBeContextSearchedCheckBoxLabel)
        readonly=readonly
        class=checkboxClass
      }}
    </div>
  </div>
  <div class="row">
    <div class="column">
      {{flexberry-multiple-select
        items=_availableLayerFields
        selectedItems=value.searchFields
        heading=('t' _searchFieldsSelectorLabel)
        allowAdditions=true
      }}
    </div>
  </div>
  <div class="row">
    <div class="column">
      {{flexberry-multiple-select
        items=_availableLayerFields
        selectedItems=value.contextSearchFields
        heading=('t' _contextSearchFieldsSelectorLabel)
        allowAdditions=true
      }}
    </div>
  </div>
</div>
