{{#if  (eq _layerType "line")}}
  <div class="field">
    <label>{{t _locationCaption}}</label>
    {{flexberry-dropdown
      items=_availableLineLocation
      value=value.location.lineLocationSelect
      readonly=(not value.signMapObjects)
    }}
  </div>
{{/if}}
<div class="field">
  <label>{{t _scaleRangeCaption}}</label>
  <div class="ui grid">
    <div class="row">
      <div class="eight wide column">
        <label>Min</label>
        {{flexberry-textbox
          class="fluid"
          value=value.scaleRange.minScaleRange
          readonly=(not value.signMapObjects)
        }}
      </div>
      <div class="eight wide column">
        <label>Max</label>
        {{flexberry-textbox
          class="fluid"
          value=value.scaleRange.maxScaleRange
          readonly=(not value.signMapObjects)
        }}
      </div>
    </div>
  </div>
</div>


