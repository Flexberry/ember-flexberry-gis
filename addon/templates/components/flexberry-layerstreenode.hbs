{{#if hasBlock}}
  {{#flexberry-treenode
    caption=name
    iconClass=iconClass
    hasCheckbox=true
    checkboxValue=visibility
    readonly=false
    headerClick=headerClick
    beforeExpand=beforeExpand
    beforeCollapse=beforeCollapse
    checkboxChange=visibilityChange
    checkboxCheck=becameVisible
    checkboxUncheck=becameInvisible
  }}
    {{yield}}
  {{/flexberry-treenode}}
{{else}}
  {{flexberry-treenode
    caption=name
    iconClass=iconClass
    hasCheckbox=true
    checkboxValue=visibility
    readonly=false
    headerClick=headerClick
    beforeExpand=beforeExpand
    beforeCollapse=beforeCollapse
    checkboxChange=visibilityChange
    checkboxCheck=becameVisible
    checkboxUncheck=becameInvisible
  }}
{{/if}}
