{{#if (gt _legends.length 0)}}
  <div class="ui list">
  {{#each _legends as |legend|}}
    <div class="{{flexberryClassNames.imageWrapper}} item">
      <img class="{{flexberryClassNames.image}}" src="{{legend.src}}" onerror='this.style.display = "none"'>
      {{#if (or showLayerName legend.showLayerName)}}
        <label class="layer-legend-caption">
          {{#if (is-none legend.layerName)}}
            {{layerName}}
          {{else}}
            {{legend.layerName}}
          {{/if}}
        </label>
      {{/if}}
    </div>
  {{/each}}
  </div>
{{else}}
  <div class="{{flexberryClassNames.imageWrapper}}">
    <i class="{{flexberryClassNames.image}} {{flexberryClassNames.defaultImage}} help icon"></i>
    {{#if showLayerName}}
      <label class="layer-legend-caption">
        {{layerName}}
      </label>
    {{/if}}
  </div>
{{/if}}
