    <canvas class="{{flexberryClassNames.image}} geometries"></canvas>
  {{/if}}
  {{#if _markersCanBeDisplayed}}
    <canvas class="{{flexberryClassNames.image}} markers"></canvas>
  {{/if}}
  {{#if showCaption}}
    <label class="{{flexberryClassNames.caption}}">{{caption}}</label>
  {{/if}}
</div>