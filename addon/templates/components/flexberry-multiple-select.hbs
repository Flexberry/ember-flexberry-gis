<label>{{title}}</label>
<div class="ui fluid multiple search selection dropdown {{selectorName}}">
  <input name="{{selectorName}}" type="hidden" value={{selectedItems}}>
  <i class="dropdown icon" style="margin-right: 20px;"></i>
   <i class="close icon" {{action 'clear'}} style="margin-right: 0px; right:0; position:absolute; font-size:12px"></i>
  <div class="default text">{{title}}</div>
  <div class="menu">
    {{#if isObject}}
    {{#each _usedItems as |item|}}
      <div class="item" data-value={{item.id}}>{{item.name}}</div>
    {{/each}}
    {{else}}
    {{#each _usedItems as |item|}}
      <div class="item" data-value="{{item}}">{{item}}</div>
    {{/each}}
    {{/if}}
  </div>
</div>