<div class="{{concat "ui celled grid" " " flexberryClassNames.wrapper}}">
    <div class="{{concat "ui six wide column" " " flexberryClassNames.layersOptions}}">
        {{#if all}}
            {{flexberry-button
                class=(concat flexberryClassNames.identifyAll " " allClass)
                iconClass=allIconClass
                tooltip=allCaption
                click=(action "onLayerOptionChange" "all")
            }}
        {{/if}}
        {{#if visible}}
            {{flexberry-button
                class=(concat flexberryClassNames.identifyAllVisible " " visibleClass)
                iconClass=visibleIconClass
                tooltip=visibleCaption
                click=(action "onLayerOptionChange" "visible")
            }}
        {{/if}}
        {{#if top}}
            {{flexberry-button
                class=(concat flexberryClassNames.identifyTopVisible " " topClass)
                iconClass=topIconClass
                tooltip=topCaption
                click=(action "onLayerOptionChange" "top")
            }}
        {{/if}}
    </div>
    <div class="{{concat "ui seven wide column" " " flexberryClassNames.toolsOptions}}">
        {{#if rectangle}}
            {{flexberry-button
                class=(concat flexberryClassNames.identifyRectangle " " rectangleClass)
                iconClass=rectangleIconClass
                tooltip=rectangleCaption
                click=(action "onToolOptionChange" "rectangle")
            }}
        {{/if}}
        {{#if polygon}}
            {{flexberry-button
                class=(concat flexberryClassNames.identifyPolygon " " polygonClass)
                iconClass=polygonIconClass
                tooltip=polygonCaption
                click=(action "onToolOptionChange" "polygon")
            }}
        {{/if}}
        {{#if marker}}
            {{flexberry-button
                class=(concat flexberryClassNames.identifyMarker " " markerClass)
                iconClass=markerIconClass
                tooltip=markerCaption
                click=(action "onToolOptionChange" "marker")
            }}
        {{/if}}
        {{#if polyline}}
            {{flexberry-button
                class=(concat flexberryClassNames.identifyPolyline " " polylineClass)
                iconClass=polylineIconClass
                tooltip=polylineCaption
                click=(action "onToolOptionChange" "polyline")
            }}
        {{/if}}
    </div>
    <div class="{{concat "ui three wide column" flexberryClassName.otherOptions}}">
        {{flexberry-button
            class=(concat flexberryClassNames.clearButton " " clearClass)
            iconClass=clearIconClass
            tooltip=clearCaption
            click=(action "clear")
        }}
    </div>
    <div class="buffer-tools">
        {{flexberry-checkbox
            label=bufferActiveCaption
            value=bufferActive
        }}
    </div>
    {{#if bufferActive}}
        <div class="buffer-tools">
            <div class="ui grid">
                <div class="buffer-tools ui three wide column">
                    <label>{{bufferRadiusCaption}}</label>
                </div>
                <div class="ui five wide column">
                    {{input
                        type="number"
                        value=bufferRadius
                    }}
                </div>
                <div class="ui seven wide column">
                    {{flexberry-dropdown
                        items=bufferUnitsList
                        value=bufferUnits
                        class="fluid"
                    }}
                </div>
            </div>
        </div>
    {{/if}}
</div>