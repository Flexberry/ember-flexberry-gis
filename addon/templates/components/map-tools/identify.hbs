{{#map-tools/base
  class=(concat flexberryClassNames.wrapper " " class)
  name="identify"
  caption=caption
  tooltip=tooltip
  iconClass=iconClass
}}
  {{#block-slot "submenu"}}
    {{#if identifyAll}}
      {{map-tools/base
        class=(concat flexberryClassNames.identifyAll " " identifyAllClass)
        name="identify-all"
        caption=identifyAllCaption
        iconClass=identifyAllIconClass
        activate=(action "onMapToolActivate")
      }}
    {{/if}}
    {{#if identifyAllVisible}}
      {{map-tools/base
        class=(concat flexberryClassNames.identifyAllVisible " " identifyAllVisibleClass)
        name="identify-all-visible"
        caption=identifyAllVisibleCaption
        iconClass=identifyAllVisibleIconClass
        activate=(action "onMapToolActivate")
      }}
    {{/if}}
    {{#if identifyTop}}
      {{map-tools/base
        class=(concat flexberryClassNames.identifyTopVisible " " identifyTopVisibleClass)
        name="identify-top-visible"
        caption=identifyTopVisibleCaption
        iconClass=identifyTopVisibleIconClass
        activate=(action "onMapToolActivate")
      }}
    {{/if}}
  {{/block-slot}}
{{/map-tools/base}}