{{#map-tools/base
  class=(concat flexberryClassNames.wrapper " " class)
  name="measure"
  caption=caption
  tooltip=tooltip
  iconClass=iconClass
  leafletMap=leafletMap
}}
  {{#block-slot "submenu"}}
    {{#if measureCoordinates}}
      {{map-tools/base
        class=(concat flexberryClassNames.measureCoordinates " " measureCoordinatesClass)
        name="measure-coordinates"
        caption=measureCoordinatesCaption
        iconClass=measureCoordinatesIconClass
        leafletMap=leafletMap
        mapToolProperties=_measureToolProperties
      }}
    {{/if}}
    {{#if measureRadius}}
      {{map-tools/base
        class=(concat flexberryClassNames.measureRadius " " measureRadiusClass)
        name="measure-radius"
        caption=measureRadiusCaption
        iconClass=measureRadiusIconClass
        leafletMap=leafletMap
        mapToolProperties=_measureToolProperties
      }}
    {{/if}}
    {{#if measureDistance}}
      {{map-tools/base
        class=(concat flexberryClassNames.measureDistance " " measureDistanceClass)
        name="measure-distance"
        caption=measureDistanceCaption
        iconClass=measureDistanceIconClass
        leafletMap=leafletMap
        mapToolProperties=_measureToolProperties
      }}
    {{/if}}
    {{#if measureArea}}
      {{map-tools/base
        class=(concat flexberryClassNames.measureArea " " measureAreaClass)
        name="measure-area"
        caption=measureAreaCaption
        iconClass=measureAreaIconClass
        leafletMap=leafletMap
        mapToolProperties=_measureToolProperties
      }}
    {{/if}}
    {{#if measureClear}}
      {{map-tools/base
        class=(concat flexberryClassNames.measureClear " " measureClearClass)
        name="measure-clear"
        caption=measureClearCaption
        iconClass=measureClearIconClass
        leafletMap=leafletMap
        mapToolProperties=_measureToolProperties
      }}
    {{/if}}
  {{/block-slot}}
{{/map-tools/base}}