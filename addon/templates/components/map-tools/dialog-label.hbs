{{#flexberry-dialog class=(concat class " " flexberryClassNames.prefix)
  caption=caption
  approveButtonCaption=approveButtonCaption
  denyButtonCaption=denyButtonCaption
  visible=visible
  approve=(action "onApprove")
  deny=(action "onDeny")
  beforeShow=(action "onBeforeShow")
  beforeHide=(action "onBeforeHide")
  show=(action "onShow")
  hide=(action "onHide")
}}
  <form class="ui form {{flexberryClassNames.form}}" role="form">
    <div class="field">
      <label>
        {{t "components.map-tools.draw.dialog-label.label"}}
      </label>
      {{flexberry-textarea
        class="fluid"
        value=label.labelText
      }}
    </div>
    <div class="ui grid">
      <div class="row">
        <div class="three wide column">
          <div class="field">
            <label>
              {{t "components.map-tools.draw.dialog-label.sizeText"}}
            </label>
            {{flexberry-dropdown
              class="fluid"
              items=_availableFontSizes
              value=label.labelFontSize
            }}
          </div>
        </div>
        <div class="three wide column">
          <div class="field">
            <label>
              {{t "components.map-tools.draw.dialog-label.color"}}
            </label>
            {{flexberry-colorpicker
              value=label.labelColor
              change=(action "onColorChange")
            }}
          </div>
        </div>
        <div class="six wide column">
          <div class="ui small fluid buttons">
            {{flexberry-button
              iconClass="bold icon"
              class=(if (eq label.labelFontWeight "bold") "active" "")
              click=(action "onBoldFontButtonClick")
            }}
            {{flexberry-button
              iconClass="italic icon"
              class=(if (eq label.labelFontStyle "italic") "active" "")
              click=(action "onItalicFontButtonClick")
            }}
            {{flexberry-button
              iconClass="underline icon"
              class=(if (eq label.labelFontDecoration "underline") "active" "")
              click=(action "onUnderlineFontButtonClick")
            }}
          </div>
        </div>
        <div class="four wide column">
          {{#if forMarkerIsVisible}}
            {{flexberry-checkbox
              value=signWithCoord
              label=(t "components.map-tools.draw.dialog-label.signWithCoord")
              change=(action "showCheckboxDidChange")
            }}
          {{/if}}
        </div>
      </div>
    </div>
  </form>
{{/flexberry-dialog}}
