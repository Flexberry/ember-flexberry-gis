      }
      &:first-child {
        height: 38px;
        margin-right: 15px;
      }
    }
  }
}

/*********************************************
            Layers result list
*********************************************/

.layer-result-list {
  padding-top: 15px;
  text-align: center;

  .ui.active.inline.loader {
    margin-top: 10px;
    left: 45%;
    display: block;
    margin-bottom: 10px;
  }
  .feature-result-item {
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    &-title {
        display: flex;
        display: -webkit-flex;
        flex-direction: row;
    }
    &-caption {
        padding-left: 8px;
        text-overflow: ellipsis;
        max-width: 80%;
        min-width: 350px;
    }
    .links~.feature-result-item-caption {
        max-width: 300px;
        min-width: 300px;
    }
    &-toolbar {
        .ui.dropdown>.dropdown.icon {
            margin: 0;
        }
    }
    a.icon.item.more {
      line-height: 5px;
      z-index: 100;
    }
    .more.submenu {
      position: absolute;
      top: 4px;
      left: 47px;
      width: 250px;
      z-index: 100;
      background: @whitecolor;
      border: none;
      box-sizing: border-box;
      border-radius: 3.5px;
      p {
        text-align: left;
        margin-bottom: 0px;
        padding-left: 7px;
        line-height: 1px;
      }
      div {
        margin-bottom: 10px;
      }
    }
    .icon.item.more {
      width: 300px;
    }
  }
  .feature-result-item-toolbar .feature-result-item-edit-forms~.more.submenu {
    left: 62px;
  }
  .feature-result-item-title {
    height: 40px;
    position: relative;
    .ui.checkbox {
      margin: auto 0;
    }
    .ui.checkbox label {
      padding-left: 26px;
    }
  }
  .feature-result-item-caption {
    max-width: 68%;
    word-break: break-word;
    word-wrap: break-word;
    font-size: 14px;
    color: @darkbluecolor;
    align-self: center;
  }
  .feature-result-item-select.icon.item, .feature-result-item-upload.icon.item {
    font-size: 1.4em;
  }
  .feature-result-item-list.icon.item {
    font-size: 1.35em;
  }
  .feature-result-item-group {
    text-align: left;
    position: relative;

    .ui.dropdown>.dropdown.icon {
        margin: 0;
    }
    &>.icon.item {
      color: @darkbluecolor;
      &.hover {
        color: @graybluecolor;
      }
    }
  }
  .feature-result-item-toolbar {
    position: absolute;
    display: flex;
    flex-direction: row;
    width: 300px;
    height: 100px;
    left: 28px;
    &>.icon.item {
      font-size: 1.15em;
    }
    .icon.favorites:before {
      font-family: Icons;
      content: "\f006";
    }
    .icon.favorites.filled:before {
      font-family: Icons;
      content: "\f005";
    }
  }
  .ui.accordion .title .dropdown.icon {
    padding: 0 !important;
    display: block;
    float: left;
  }

  .layer-result-list-toggler {
    .title {
      display: flex;
      align-items: end;
      .flexberry-toggler-caption {
        margin-left: 6px;
        display: block;
        float: left;
        max-width: 80%;
        font-size: 14px;
      }
    }
  }

  .flexberry-toggler {
    padding: 5px;
    margin-bottom: 5px;
    margin-top: 5px;
  }
  .ui.accordion:not(.styled) .title~.content:not(.ui):last-child:not(.flexberry-toggler-content) {
    padding: 5px;
  }
  .flexberry-toggler-content {
    .item:not(.icon) {
      padding: 5px 5px 5px 8px;
      margin-bottom: 5px;
      .ui.table {
        margin-top: 0px;
        color: @darkbluecolor;
        border: none;
        tr th {
          background: @lightbluecolor;
        }
        td {
          word-break: break-word;
          word-wrap: break-word;
          min-width: 80px;
          border: none;
          padding: 0px;
          color:  #343A32;
        }
      }
    }
  }
  .flexberry-progressbar {
    margin-top: .5em !important;
    margin-right: .7em;
    div.bar {
      background: @bluecolor;
      &::after {
        background: @lightbluecolor;
      }
      &::before {
        background: @lightbluecolor;
      }
    }
    .label {
      color: @darkbluecolor;
    }
  }
  .item {
    cursor: pointer;
    &.active {
      background: #aecff7;
      border: 1px solid gray;
      border-radius: 2px;
    }
  }
  &-toggler .title {
    .flexberry-toggler-caption {
      margin-left: 1em;
    }
  }
  .feature-div-property-name {
    font-size: 12px;
    color: #8F928F;
    padding: 10px 0px 5px 0px;
  }
  .feature-div-property-value {
    font-size: 12px;
    color: #343A32;
    .table {
      width: 400px;
      border: none;
      tr td {
        border: none;
      }
    }
    .intersection-table tr{
      height: 1em;
    }
  }
  .feature-result-item-content {
    padding-left: 32px;
  }
}

.details {
  .detail.caption {
    font-size: 14px;
  }
  .detail {
    font-size: 13px;
  }
}

.ui.bottom.bottompanel .intersections-panel-form-row {
    .feature-result-item-upload {
      display: none;
    }
    .flexberry-toggler-caption {
      margin-left: 0px;
    }
}

/*********************************************
            Search form
*********************************************/
.gis-search-form {
  // Alignment for 'anyText' input & its buttons.
  .ui.action.input {
    .search-button {
      position: absolute;
      right: 35px;
      border: none;
      height: 35px;
    }

    .clear-search-button {
      position: absolute;
      right: 0;
      border: none;
      height: 35px;
    }
  }

  // Hide segments borders exept tabular menu segments.
  .ui.segment:not(.tab), .ui.segments {
    border: none;
    box-shadow: none;
  }

  // Alignment for tabular menu.
  .ui.tabular.fluid.menu {
    width: 100% !important;
    margin-top: 35px;
  }

  // Fix display of horizontal segments inside accordion content.
  .ui.horizontal.segments.content {
    min-width: 325px;
    &.active, &.animating {
      display: flex;
      flex-direction: row;
    }
  }

  .advanced-search {
    .ui.horizontal.segments {
      &> .segment.advanced-search-what-segment {
        width: 50%;
      }

      &> .segment.advanced-search-where-segment {
        width: 50%;

        .flexberry-boundingbox {
          .flexberry-map {
            max-height: 300px;
          }
        }
      }
    }
  }

  // Fix colors of labels inside accordion header.
  .ui.label {
    &.active {
      background-color: #dcebfc;
      border: 0px solid transparent;
      background-image: none;
      color: rgba(0, 0, 0, 0.6);
    }
  }

  // Hide icon in header of search-results segment.
  .ui.segments:not(.horizontal) > .ui.segment.search-results {
    margin-top: 1em;

    .ui.label {
      i {
        opacity: 0;
      }
    }
  }

  // Alignment for results table top toolbar & its items.
  .search-result-top-panel {
    a {
      line-height: 35px !important;
    }
    &-clear {
      cursor: pointer;
    }
    &-item {
      display: inline-block;
      span {
        margin: 5px;
      }
    }
  }
}

.scale-filter {
  margin: 0em 0em 0.5em;
  white-space: nowrap;

  .compact.selection {
    width: 5%;
  }

  .scale-value {
    &:not(.flexberry-dropdown) {
      width: ~"calc(100% - 64px)";
      display: inline-block;

      .flexberry-dropdown {
        i.dropdown.icon {
          right: 32px;
        }
      }
    }
  }

  .ui.button {
    position: absolute;
    right: 0;
    border: none;
    height: 35px;

    .remove.icon:hover:before {
      color: @red;
    }
  }
}

/*********************************************
            Flexberry table
*********************************************/
.ui.table.flexberry-table {
  font-size: 12px;
  th.narrow, td.narrow {
    width: 90px;
    max-width: 90px;
  }
  th.checkbox-rhumb, td.checkbox-rhumb {
    text-align: center;
  }
  th.narrow.rhumb, td.narrow.rhumb {
    width: 120px;
    max-width: 120px;
  }

  th.checkbox, td.checkbox {
    width: 26px;
  }

  th, td {
    max-width: 200px;
  }

  td {
    .ui.checkbox {
      width: 26px;
    }
  }

  td input[type="text"] {
    padding: 0.3em 1em;
    display: inline-block;
    max-width: 200px;
  }
}

.ui.table.flexberry-table-no-model {
  width: 100% !important;
}

/************************************************************
    Simple layers-style (components/layers-styles/simple)
************************************************************/

.hiddenAnchor{
  display: none;
}

.ui.selection.dropdown {
  &.simple-layers-style-stroke-linejoin-dropdown,
  &.simple-layers-style-stroke-linecap-dropdown,
  &.simple-layers-style-stroke-dasharray-dropdown {
    min-width: 0;
    padding-top: 3px;
    padding-bottom: 3px;

    >.dropdown.icon {
      top: 1.5em;
    }

    .menu {
      // About three items is enough.
      max-height: 150px;

      >.item {
        // Impartans are needed here because of importants in original Semantic UI dropdown styles.
        padding-top: 3px !important;
        padding-bottom: 3px !important;
      }
    }
  }
}

.image-markers-style-icon-editor {
  // Relative position is necessary for inner loader.
  position: relative;

  .flexberry-file {
    .ui.action.input {
      .ui.icon.button {
        border: none;
        background: none;
        position: absolute;

        &.flexberry-file-add-button {
          right: -5px;
        }

        &.flexberry-file-remove-button {
          right: -45px;
          // Remove button is unnecessary here, but flexberry-file component doesn't have an option to hide it.
          display: none;
        }
      }
    }
  }

  .enable-icon-checkbox,
  .restore-original-icon-size-button {
    cursor: pointer;
  }

  .icon-image-wrapper {
    position: relative;
    margin: 0 auto;
    height: 150px;
    width: 150px;
    overflow: auto;

    .icon-image {
      position: absolute;
      top: 0;
      left: 0;
      margin: 4px;
    }

    .icon-anchor {
      position: absolute;
      top: 0;
      left: 0;
      margin: 4px;
    }
  }
}

form.flexberry-edit-layermap {
  .simple-layers-style {
    .ui.pointing.secondary.menu {
      .item {
        display: flex;
        justify-content: center;
        width: 50%;
      }
    }

    .ui.tab.segment {
      // Sticky canvas inside tab won't work without visible overflow.
      overflow: visible;

      border: none;
      box-shadow: none;
      padding: 0;

      .ui.grid.style-settings-with-preview {
        margin: 0;
        padding: 0;
        padding-top: 1px;

        >.column {
          padding: 0;

          &:last-child {
            padding-left: 1rem;
          }
        }

        canvas {
          margin: 0 auto;
          border: 1px solid rgba(34, 36, 38, 0.15);
          border-radius: 0.285rem;
          width: 240px;
          height: 160px;

          // Force canvas to be sticky at the top of tab segment.
          position: static;
          position: -webkit-sticky !important;
          position: -moz-sticky !important;
          position: -ms-sticky !important;
          position: -o-sticky !important;
          position: sticky !important;
          top: 10px;
        }

        .flexberry-jsonarea {
          margin-left: 1px;
        }

        .flexberry-colorpicker {
          width: 40px;
          border: 1px solid #b1cae8;
          border-radius: 0.285rem;
        }

        .empty-space {
          // It is needed to have enough space for colorpicker's sprite.
          height: 150px;
        }

        .simple-layers-style-path-editor {
          .ui.table {
            margin-bottom: 1rem;

            th:first-child {
              width: 70px;
            }

            td {
              &>input {
                max-width: 60px;
                height: 50px;
              }

              &>.ui.dropdown {
                height: 50px;
              }
            }
          }
        }

        .simple-layers-style-stroke-editor {
          div.ui.dropdown .text {
            width: 35px;
          }
        }

        .markers-styles-editor {
          .ui.table {
            margin-bottom: 1rem;
          }
        }
      }
    }
  }
}

/*******************************************************************************************************************
      Unique and graduated layers-styles (components/layers-styles/unique   components/layers-styles/graduated)
*******************************************************************************************************************/
.unique-layers-style, .graduated-layers-style {
  .toolbar {
    display: inline-block;
    width: 100%;

    .add-and-remove-categories-segment {
      float: left;
    }

    .gradient-tools-segment {
      float: left;
      margin-left: 1rem;
    }

    .classify-categories-segment {
      float: right;

      input.categories-count {
        width: 70px;
        height: 38px;
      }
    }
  }

  .ui.table.categories-table {
    th {
      &.category-selection-column {
        width: 5%;
      }

      &.category-symbol-column {
        width: 15%;
      }

      &.category-name-column, &.category-value-column {
        width: 40%;
      }
    }
  }

  .category-style-editor {
    display: none;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: #ffffff;

    &.active {
      display: block;
    }

    .category-style-editor-close-button {
      position: absolute;
      top: 0.4rem;
      right: 0.4rem;
      cursor: pointer;
      z-index: 100;
    }

    .category-style-editor-content-wrapper {
      overflow: auto;
      width: 100%;
      max-height: 100%;
    }

    .category-style-editor-content {
      // Sticky canvas inside tab won't work without visible overflow.
      overflow: visible;
      width: 100%;
      padding: 1rem;
    }
  }
}

