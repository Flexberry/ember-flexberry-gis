/*******************************
         Theme Overrides
*******************************/

.stackable.grid.container {
    margin-top: 0px;
}

/*******************************
          Flexbery lookup
*******************************/
.flexberry-lookup.fluid {
  .flexberry-dropdown {
    width: 100%;
  }
}

/*******************************
          Flexberry Map
*******************************/

.rightFloated{
	float:right;
}

.flexberry-map {
  font-family: inherit;
  width: @flexberryMapWidth;
  height: @flexberryMapHeight;
  background-color: @flexberryMapBackgroundColor;

  &.crosshair {
    cursor: crosshair;
  }
  &.zoom-in {
    cursor: zoom-in;
  }
  &.zoom-out {
    cursor: zoom-out;
  }
  &.help {
    cursor: help;
  }

  .flexberry-map-loader.ui.loader {
    display: none;
    z-index: 10001 !important;
    color: @flexberryMapLoaderColor;

    &.active {
      display: block;
    }
  }

  .flexberry-map-loader-dimmer.ui.dimmer {
    display: none;
    z-index: 10000 !important;

    &.active {
      display: block;
    }
  }
}

.flexberry-gis-map {
    max-width: @flexberryGisMapMaxWidth;
}

.map-only-container .flexberry-map {
   height: @flexberryMapOnlyContainerHeight;
}

/* Inside map */

.mappanel {
    height: 100%;
    min-height: 100%;
    /* Inserted container */
    &>div {
        height: 100%;
    }
    /* left control container */
    .leaflet-bar {
        border: none;
        a {
            font-weight: normal;
            height: @leafletBarButtonHeight;
            width: @leafletBarButtonWidth;
            box-shadow: @leafletBarButtonBoxShadow;
            color: @leafletBarButtonColor;
            background: @leafletBarButtonBackground;
            font-size: @leafletBarButtonFontSize;

            &.active,
            &:hover {
                color: @leafletBarButtonColor;
                background: @lightbluecolor;
                box-shadow: @leafletBarButtonHoveredBoxShadow;
            }
            &.leaflet-disabled {
                color: @lightgraycolor;
                &:hover {
                    color: @leafletBarButtonDisabledHoveredColor;
                    background: @leafletBarButtonDisabledHoveredBackground;
                }
                i.icon:before {
                    color: @lightgraycolor;
                }
            }
        }
    }
    .leaflet-left {
        &.leaflet-top {
            top: 50px;
        }
        .leaflet-control-zoom.leaflet-bar {
            margin-top: 5px;
            a {
                padding-top: 3px;
                &:first-child {
                    border-radius: 5px 5px 0px 0px;
                }
                &:last-child {
                    border-radius: 0px 0px 5px 5px;
                }
            }
        }
    }
    .leaflet-right.leaflet-top {
        left: 56px;
        top: 10px;
        right: auto;
        .history-control.leaflet-bar {
            margin: 0;
            a {
                border: none;
                &:first-child {
                    border-radius: 5px 0px 0px 5px;
                }
                &:last-child {
                    border-radius: 0px 5px 5px 0px;
                }
            }
        }
    }
    .leaflet-bottom.leaflet-right {
        padding-right: 5px;
        .leaflet-control {
            margin: 0;
        }
        .leaflet-control-container {
            vertical-align: bottom;
            text-align: right;
        }
    }
}


/*********************************************
        Containers with controls inside
*********************************************/

.mappanel,
.sidebar-wrapper {
    /* Table */
    .ui.table {
        color: #6f9be3;
        /* Column header */
        thead th {
            color: @darkbluecolor;
            background-color: @lightbluecolor;
        }
        tbody td {
            color: @bluecolor;
        }
    }
    /* Controls container */
    .segment {
        box-shadow: @lightBoxShadow;
        border: none;
        /* Container header */
        .header {
            color: @inputColor;
            font-size: 16px;
        }
        .field {
            .input {
                .ember-text-field {
                    background-color: @whitecolor;
                    border-radius: @borderRadius;
                    border-bottom: @borderBottom;
                }
            }
        }
    }
    .ui.form {
        .field {
            &>.input {
                .ember-text-field {
                    color: @inputColor;
                    box-shadow: @darkBoxShadow;
                    border-radius: @borderRadius;
                    border-bottom: @borderBottom;
                }
            }
            .flexberry-dropdown {
                border-radius: @borderRadius;
                border-bottom: @borderBottom;
                &:focus {
                    border-radius: @borderRadius;
                }
            }
        }
    }
    .ui.small.fluid.buttons:not(.basic):not(.inverted) {
        &>.or::before {
            background: @lightgraycolor;
            color: @bluecolor;
            box-shadow: @lightBoxShadow;
        }
        &>.button.flexberry-button {
            background: @whitecolor;
            color: @darkbluecolor;
            box-shadow: @darkBoxShadow;
            &.active {
                background: @lightbluecolor !important;
            }
            &:hover {
                opacity: 0.8;
            }
        }
    }
}

/*********************************************
          Flexberry Map tools
*********************************************/

.flexberry-map-tool-submenu {
  z-index: 1000000 !important;
}

.flexberry-maptoolbar.ui.menu {
  flex-wrap: wrap;
}
.mappanel .leaflet-left .leaflet-control-zoom.leaflet-bar a,
.mappanel .leaflet-right.leaflet-top .history-control.leaflet-bar a {
  box-shadow: @defaultBoxShadow;
}

.ui.menu.flexberry-maptoolbar {
    z-index: 1000 !important;
    margin: 10px 10px 0px 10px;
    background-color: transparent !important; // боримся с технологическими стилями
    overflow: visible;
    z-index: 999;
    border: 0px !important; // боримся с технологическими стилями
    position: absolute;
    display: inline-block;
    width: 0px;
    /* элементы меню */
    a.item {
        color: @darkbluecolor;
        font-size: 0px;
        background: @whitecolor;
        box-shadow: @defaultBoxShadow;
    }
    /* элементы меню */
    .item {
        border-radius: 5px;
        padding: 4px 8px;
        font-weight: normal;
        height: 36px;
        box-shadow: @darkBoxShadow;
        margin-bottom: 10px;
        width: 36px;
        font-size: 12px;
    }
    /* элементы меню при наведении */
    .item:hover,
    .link.item:hover,
    a.item:hover,
    .active.item:hover,
    .vertical .active.item:hover,
    .ui.icon.button:hover {
        background-color: @lightbluecolor;
        color: @bluecolor;
    }
    /* выбранный элемент меню */
    .active.item,
    .vertical .active.item {
        background-color: @lightbluecolor;
        color: @darkbluecolor;
        box-shadow: @darkBoxShadow;
    }
    /* фон меню */
    .item:before {
        background: none;
    }
    /* первый блок */
    .flexberry-zoom-in-map-tool,
    .flexberry-zoom-out-map-tool,
    .flexberry-identify-map-tool,
    .flexberry-full-extent-map-command {
        border-right: none;
        border-left: none;
        border-radius: 0px;
        box-shadow: @darkBoxShadow;
        position: absolute;
        margin: 0px;
    }
    .flexberry-edit-map-command {
        position: absolute;
        left: 130px;
    }
    /* рука */
    .flexberry-drag-map-tool {
        border-right: solid 1px @lightgraycolor;
        border-radius: 5px 0px 0px 5px;
        position: absolute;
        left: 176px;
    }
    /* приблизить */
    .flexberry-zoom-in-map-tool {
        left: 212px;
    }
    /* отдалить */
    .flexberry-zoom-out-map-tool {
        left: 248px;
    }
    /* переход к точке */
    .flexberry-identify-map-tool {
        left: 284px;
    }
    .flexberry-compare-map-tool {
        border-radius: 0px 5px 5px 0px;
        left: 320px;
    }
    .flexberry-full-extent-map-command {
        border-radius: 5px;
    }
    /* поиск по карте */
    .flexberry-go-to-map-command {
        margin-top: 130px;
    }
    /* раскрывающие списки */
    .flexberry-search-map-command,
    .flexberry-measure-map-tool,
    .flexberry-draw-map-tool,
    .flexberry-go-to-map-command,
    .flexberry-export-map-command {
        i.flexberry-map-tool-submenu-icon.dropdown.icon,
        i.flexberry-map-command-submenu-icon.dropdown.icon {
            display: none;
        }
        &.active {
            i.flexberry-map-tool-submenu-icon.dropdown.icon,
            i.flexberry-map-command-submenu-icon.dropdown.icon {
                margin-left: 18px;
                transform: rotate(90deg);
                display: block;
                &:before {
                    font-size: 40px;
                }
            }
        }
        /* IE10+ фиксы */
        @media screen and (-ms-high-contrast: active),
        (-ms-high-contrast: none) {
            &.active {
                i.flexberry-map-tool-submenu-icon.dropdown.icon,
                i.flexberry-map-command-submenu-icon.dropdown.icon {
                    margin-left: 50px;
                    margin-top: -20px;
                }
            }
        }
    }
    .flexberry-more-map-command {
        i.flexberry-map-tool-submenu-icon.dropdown.icon,
        i.flexberry-map-command-submenu-icon.dropdown.icon {
            display: none;
        }

        .flexberry-map-command-submenu {
          a.flexberry-map-tool {
            padding: 5px !important;
            i.icon {
              margin: 0px;
            }

            i.icon:before {
              font-size: 15px;
            }
          }
        }
    }
    /* показать слои */
    .flexberry-maplayers-show {
        display: inline-flex;
        top: 35px;
        left: 240px;
        i.icon.list:before {
            font-size: 20px;
        }
    }
    /* иконки */
    i.icon {
      &.dropdown:before {
          font-family: Icons;
      }
    }
    /* отступ в кнопках с иконками */
    .ui.icon.button {
        padding: 5px;
    }
    /* укрупненные иконки */
    .flexberry-map-tool>i.icon:before,
    .treeview>i.icon:before,
    .flexberry-map-layers-add-button>i.plus.icon:before,
    .icon.tpi {
        font-size: 20px;
    }
    /* отображение слоёв */
    i.icon.table:before {
        content: "\e819";
    }
    /* рука */
    i.icon.hand.paper:before {
        content: "\e823";
    }
     /* поиск пересечений */
    i.icon.intersections:before {
      font-family: Icons;
      content: "\f24d";
    }
    i.icon.favorites:before {
      font-family: Icons;
      content: "\f006";
    }
    i.icon.background-layers:before {
      font-family: Icons;
      content: "\f009";
    }
    i.icon.compare:before {
      font-family: Icons;
      content: "\f0ec";
    }
    /* + */
    i.icon.zoom:before {
        content: "\e831";
    }
    /* - */
    i.icon.zoom.out:before {
        content: "\e832";
    }
    /* перейти к точке */
    i.icon.location.arrow:before {
        content: "\e812";
    }
    i.icon.resize:before {
        font-family: Icons;
        content: "\f0b2";
    }
    /* геолокация */
    i.icon.bullseye:before {
        font-family: Icons;
        content: "\f140";
    }
    /* поиск по адресу */
    .address.search i.icon.address:before {
        font-family: Icons;
        content: "\f02d";
        font-size: 20px;
    }
    /* идентифицировать слои */
    i.icon.info.circle {
        margin-left: -4px;
        margin-right: 4px;
        &:before {
            content: "\e827";
        }
    }
    /* все слои, дерево слоёв*/
    i.icon.square.outline:before,
    i.icon.list:before {
        font-family: Crimean;
        content: "\e825";
    }
    /* видимые слои */
    i.icon.checkmark.box:before {
        content: "\e829";
    }
    /* Favorites */
    i.icon.favorites:before {
      font-family: Icons;
      content:"\f006"
    }
    /* верхний видимый */
    i.icon.chevron.up:before {
        content: "\e828";
    }
    /* измерить */
    i.icon.wizard {
        margin-right: 2px;
        &:before {
            content: "\e82a";
        }
    }
    /* координаты */
    i.icon.marker:before {
        content: "\e812";
    }
    /* радиус */
    i.icon.circle:before {
        content: "\e82b";
    }
    /* расстояние */
    i.icon.empty.star:before {
        font-family: Icons;
        content: "\f065"
    }
    /* площадь */
    i.icon.square:before {
        font-family: Icons;
        content: "\f248";
    }
    /* нарисовать */
    i.icon.write:before,
    i.icon.edit:before {
        content: "\e810";
    }
    /* линейка */
    i.icon.star:before {
        content: "\e802";
    }
    /* экспортировать */
    i.icon.external {
        margin-left: -2px;
        margin-right: 2px;
        &:before {
            content: "\e822";
        }
    }
    i.icon.minimap {
      &:before {
        content: '\f278';
        font-family: Icons;
      }
    }
    /* изображение */
    i.icon.download:before {
        content: "\e824";
    }
    /* напечатать */
    i.icon.print:before {
        content: "\e80f";
    }
    /* + в сайдбаре */
    i.icon.plus:before {
        height: 26px;
        color: @greencolor;
        content: "\e833";
    }
    /* удаление */
    i.icon.trash:before {
        content: "\e814";
    }
    /* сохранить */
    i.icon.save:before {
        content: "\e80c";
    }
    /* поиск */
    i.icon.search:before {
        content: "\e803";
    }
    /* градсправка */
    i.icon.tpi:before {
        content: "\e836";
    }
    /* папка слоя */
    i.icon.folder {
        margin-right: 0px;
        /* иконка */
        &:before {
            font-size: 18px;
            font-family: FontAwesome;
            content: "\f114";
        }
    }
}

.background-layers.flexberry-maptoolbar.ui.menu {
  position: absolute;
  bottom: 0;
  left: 0;
  float: right;
  width: 100%;
  padding: 0;
  .flexberry-background-layers-map-tool-div {
    position: absolute;
    top: 0;
    right: 0;
    margin: 0px 30px 30px 0px;
    width: 360px;
    .flexberry-background-layers-map-tool {
      margin-bottom: 0px;
    }
    .visible {
      border-radius: 5px 5px 0px 0px;
      border-bottom-width: 0px;
      clip-path: inset(-2px -2px 0px -2px);
    }
    .main-background-layers {
      position: absolute;
      bottom: 0px;
      right: 0px;
      max-width: 357px;
      background: @whitecolor;
      box-shadow: @uiIconButtonBoxShadow;
      clip-path: inset(0px -2px 0px -2px);
      padding: 15px;
      border: 1px solid  @bluecolor;
      box-sizing: border-box;
      border-top-width: 0px;
    }
    .secondary.menu {
      border: none;
      min-height: 30px;
      a.tab {
        cursor: pointer;
        color: #8F928F;
        font-size: 14px;
        font-weight: normal;
        border-bottom: none;
        padding: 0 10px;
        line-height: 30px;
        &.active {
          color: @activeItemColor;
          font-weight: normal;
        }
      }
    }
    a:not('.tab') {
      position: absolute;
      right: 0;
    }
    .last-item {
      padding-right: 0px;
    }
    .first-item {
      padding-right: 17px;
    }
    .child-background-layers{
      position: relative;
      padding-bottom: 10px;
      display: inline-block;
      .picture {
        border: @defaultGrayBorder;
        box-shadow: @defaultBoxShadow;
        width: 94px;
        height: 49px;
        box-sizing: border-box;
      }
      .active {
        border: 1px solid @darkbluecolor;
      }
      p {
        text-align: center;
        font-size: 11px;
        width: 94px;
        line-height: 13px;
        word-break: break-word;
      }
    }
  }
}

.flexberry-drag-box {
  position: absolute;
  cursor: all-scroll;
}

